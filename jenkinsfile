pipeline {
    agnet any
  stages {
  stage ("Checkout") {
    steps {
	checkout scmGit(branches: [[name: '*/release/23.10.200']], extensions: [], userRemoteConfigs: [[credentialsId: '12084076', url: 'https://gitlab.com/mmbabu26/terraform-project']])
	}
  }
  stage("terraform init") {
    steps {
	  sh ("terraform init")
	}
  }
  stage ("terraform action") {
    steps 
	   echo "Terraform action is -->${action}"
	   sh('terraform ${action} --auto-approve')
	 }
    }
  }
  
